{
  "name": "@hekojs/multiplayer-server",
  "version": "0.0.1",
  "description": "Heko multiplayer server",
  "main": "lib/",
  "scripts": {
    "test": "standard && jest",
    "watch": "babel ./src --watch --out-dir ./lib",
