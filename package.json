    "url": "git+https://github.com/hekojs/multiplayer-server.git"
  },
  "author": "Anael Favre",
  "license": "MIT",
  "dependencies": {
    "@colyseus/monitor": "^0.12.2",
    "@colyseus/schema": "^0.5.39",
    "colyseus": "^0.13.7",
